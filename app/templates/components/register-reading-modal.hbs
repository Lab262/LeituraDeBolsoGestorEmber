<div id="reading-form-modal" class="modal modal-fixed-footer">
  <div class="modal-content" id="modal-content">

    {{md-input
      value=title
      label='Título'
      class="field"
      validate=false
      disabled=(not isNewReading)
      errors=errors.title}}

      {{md-input
        value=authorName
        label='Autor'
        class="field"
        validate=false
        disabled=(not isNewReading)
        errors=errors.authorName}}

        {{md-textarea
          label='Conteúdo'
          value=content
          class="text-area"
          validate=false
          disabled=(not isNewReading)
          errors=errors.content
          length="10000"}}

          {{!-- <div class="input-field col s12">
                    <textarea id="textarea1" class="materialize-textarea "> </textarea>
                    <label for="textarea1" >Conteúdo</label>
                  </div> --}}

          {{md-select
            id="md-select"
            content=readingTypes
            value=readingSelectedType
            label="Tipo de Leitura"
            optionValuePath="content"
            class="select-field"
            selection="changeReadingType"}}


            <div class="reading-time">
              Tempo de leitura:
              <div class="reading-time-value"> {{readingTimeInMinutes}} min</div>
            </div>


            {{md-check
               name="Leitura do dia"
               checked=readOfTheDay
               value=readOfTheDay
               disabled=(not isNewReading)
               class="checkbox"
             }}


          </div>
          <div class="modal-footer">
            {{#if isNewReading}}
            <a href="#!" class="modal-action submit-form waves-effect waves-green btn-flat" {{action "submitForm"}}>Cadastrar</a>
            {{/if}}
            <a href="#!" class="modal-action close-modal waves-effect waves-green btn-flat" {{action "closeModal"}}>Cancelar</a>

          </div>
        </div>
